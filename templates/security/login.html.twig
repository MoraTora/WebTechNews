{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        {#  <div class="alert alert-danger">Неправильная пара логин и пароль</div> #}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Вход</h1>
    <label for="inputEmail">Эл.Почта</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Пароль</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    {#
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Запомнить меня
            </label>
        </div>#}
    <div class="btn-group">
        <button class="btn btn-primary" type="submit">Вход</button>
        <a role="button" href="{{ path('app_register') }}" class="btn btn-outline-primary">Регистрация</a>
    </div>
</form>
{% endblock %}
